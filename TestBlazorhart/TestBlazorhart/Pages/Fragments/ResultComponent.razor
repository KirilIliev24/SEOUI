@using TestBlazorhart.Data
@inject ResultService ResultService
@inject NavigationManager NavManager



<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12" id="items">
            @result.Title
            <br />
            <a href="@result.Link">@result.Link</a>
            <br />
            @result.Snippet
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <button class="btn btn-primary" @onclick="viewLinkPositions" >Rankings</button>
        </div>
    </div>
</div>



@code {
    [Parameter] public Result result { get; set; }

    private void viewLinkPositions()
    {
        string baseAddress = NavManager.BaseUri;
        NavManager.NavigateTo($"{baseAddress}/Rankings/{result.blazorIndex}", false);
    }
}

<style>
    #items {
        background-color: #d9eefa;
        display: block;
        width: 500px;
        height: auto;
        border-style: solid;
        border-width: 1px;
        border-radius: 4px;
        word-wrap: break-word;
        text-overflow: ellipsis;
    }

    button {
        transition: box-shadow 300ms ease-in-out, color 300ms ease-in-out;
        width: auto;
    }
    button:hover {
        box-shadow: 0 0 40px 40px #e74c3c inset;
    }
    label {
        margin-top: 20px;
    }
</style>